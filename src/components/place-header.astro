---
import { Heart } from 'lucide-react'
import ShareDialog from './sections/distrito/share-dialog'

interface Props {
  placeName: string
}

const { placeName } = Astro.props
---

<div class="w-full flex justify-between">
  <h1 class="font-outfit text-4xl font-bold">{placeName}</h1>
  <div class="flex gap-3">
    <ShareDialog shareWithName={placeName} client:only="react" />
    <button
      class="flex gap-2 items-center text-sm p-2 hover:bg-gray-200 hover:rounded-md focus:scale-95 transition-all"
    >
      <Heart size={15} />
      <span class="hidden md:block"> Guardar </span>
    </button>
  </div>
</div>
