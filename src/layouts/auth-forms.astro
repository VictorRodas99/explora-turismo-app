---
import Logo from '@/images/complete-logo.png'
import { Image } from 'astro:assets'
---

<main
  class="w-full h-screen flex justify-center items-center bg-gradient-to-b from-gray-50 to-primary/20"
>
  <div class="flex flex-col gap-2 w-[90%] md:w-[40%] lg:w-[25%]">
    <div class="w-full grid place-items-center">
      <Image src={Logo} width={200} height={200} alt="Logo principal" />
    </div>
    <slot />
  </div>
</main>
